<h3><%=t "Repositories" %></h3>
<table class="table table-striped table-condensed table-bordered">
  <tr>
    <th>Name</th>
	<th>Head</th>
	<th>Last Commit</th>
	<th>Message</th>
    <th>Path</th>
    <th></th>
    <th></th>
  </tr>

<% @repos.each do |repo| %>
  <tr>
    <td><%= link_to repo.name, repo %></td>
	<td><%= repo.rug.head.name %></td>
	<td><%= repo.rug.lookup(repo.rug.head.target).time %></td>
	<td><%= repo.rug.lookup(repo.rug.head.target).message %></td>
    <td><%= repo.path %></td>
    <td><%= link_to 'Edit', edit_repo_path(repo) %></td>
    <td><%= link_to 'Destroy', repo, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

